# Ejemplo de Variables de Entorno para Backend
# ⚠️ NO COMMITEAR VALORES REALES - Este es solo un template

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration (Railway PostgreSQL o SQL Server externo)
DB_HOST=${{MSSQL.HOST}}
DB_PORT=${{MSSQL.PORT}}
DB_USER=${{MSSQL.USER}}
DB_PASSWORD=${{MSSQL.PASSWORD}}
DB_NAME=${{MSSQL.DATABASE}}
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# JWT Configuration
JWT_SECRET=${{JWT_SECRET}}
JWT_REFRESH_SECRET=${{JWT_REFRESH_SECRET}}
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=${{FRONTEND_URL}}

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
